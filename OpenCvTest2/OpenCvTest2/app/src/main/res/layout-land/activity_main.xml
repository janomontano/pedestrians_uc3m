<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.uc3m.opencv.opencvtest2.MainActivity">

    <include layout="@layout/content_main"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_menu_updown_nexus_car_all_isl_land">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="0.34" />

        <Button
            android:text="CONFIGURACIÃ“N"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:id="@+id/Configuracion"
            android:layout_weight="0.01"
            android:background="@drawable/inc_option2_llave_blue"
            android:layout_above="@+id/tecAbout"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="INICIAR CAPTURA"
            android:layout_width="300dp"
            android:id="@+id/tecCaptur"
            android:background="@drawable/inc_option1_1_cam_blue"
            android:layout_height="45dp"
            android:layout_above="@+id/Configuracion"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="ACERCA DE..."
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:id="@+id/tecAbout"
            android:background="@drawable/inc_option3_univ_blue"
            android:clickable="false"
            android:layout_marginBottom="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
